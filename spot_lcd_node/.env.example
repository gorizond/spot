# Конфигурационные переменные для LCD-сервиса

# Пины GPIO для подключения LCD1602
LCD_PIN_RS=25
LCD_PIN_EN=24
LCD_PINS_DATA=23,17,18,22

# Размеры дисплея
LCD_COLS=16
LCD_ROWS=2

# Интервалы проверки (в секундах)
TEMP_INTERVAL=5
UPTIME_INTERVAL=10

# Темы для публикации в ROS
TEMP_TOPIC=lcd_temperature
UPTIME_TOPIC=lcd_uptime